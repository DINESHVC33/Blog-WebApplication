<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= "#{post.title} ( #{post.topic.title})" %></td>
      <td><%= post.content %></td>
       </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @posts %>
<br>

