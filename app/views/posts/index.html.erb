<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Topic</th>
      <th>Status</th>
      <th>Avg rating</th>
      <th>Comments count</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.topic.title %></td>
        <td><%= post.marked_as_read?(current_user) ? 'Read' : 'Unread' %></td>
        <td><%= post.rating_average.present? ? " #{post.rating_average.round(1)} Ratings" : 'N/A' %></td>
        <td><%= post.comments_count %></td>
        <td><%= link_to 'Show',topic_post_path(@topic,post) %></td>
        <td><%= link_to 'Edit', edit_topic_post_path(@topic,post) if can?(:edit, post)&.present? %></td>
        <td><%= button_to 'Destroy',topic_post_path(@topic,post)  , method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_topic_post_path(@topic)%>
<%= link_to 'Back', topics_path(@topic)%>